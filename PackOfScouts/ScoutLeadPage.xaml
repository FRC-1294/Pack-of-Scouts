<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PackOfScouts.ScoutLeadPage"
             Title="Scout Lead Dashboard"
             x:Name="LeadPage" BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Welcome Scout Lead!" Grid.Row="1" Grid.ColumnSpan="2" FontSize="Header"
                   HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" Margin="10"/>

            <Image
                Source="pack_of_parts.png"
                SemanticProperties.Description="POP Logo"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <HorizontalStackLayout
                HorizontalOptions="Center">

                <Button
                    Text="Scan QR Code"
                    WidthRequest="150"
                    SemanticProperties.Hint="Scan a QR code that has some scout data"
                    Clicked="OnScanScoutQRCodeClicked" />

                <Button
                    Text="Import Schedule"
                    WidthRequest="150"
                    Clicked="OnImportDataButtonClicked" />


            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>