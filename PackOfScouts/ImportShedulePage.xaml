<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PackOfScouts.ImportSchedulePage"
    Title=""
    BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="pack_of_parts.png"
                SemanticProperties.Description="POP Logo"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Enter the Competition ID"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                FontSize="20"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                TextColor="White"/>

            <Entry
                x:Name="compIDTextBox"
                WidthRequest="300"
                Placeholder="Enter id..." 
                Grid.Row="2"
                Grid.ColumnSpan="2"
                BackgroundColor="White"
                TextColor="Black"
                TextChanged="OnCompIDTextChanged"/>

            <HorizontalStackLayout
                HorizontalOptions="Center">

                <Button
                    Text="Import Schedule"
                    WidthRequest="150"
                    Clicked="OnImportScheduleClicked" />

            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>