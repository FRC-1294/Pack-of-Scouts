<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PackOfScouts.ScoutPage"
             Title="Scout Dashboard">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <Editor
            Grid.Column="0"
            MinimumWidthRequest="250"
            Margin="5"/>

        <VerticalStackLayout
            x:Name="lamo"
            Grid.Column="1"
            Margin="5"
            WidthRequest="150"
            HorizontalOptions="Center">

            <Image
                Source="pack_of_scouts.png"
                SemanticProperties.Description="Scouty Mac Scout"
                HeightRequest="100"
                Margin="5"/>

            <Button 
                Text="Open Scout File" 
                Clicked="OnOpenScoutFileClicked" />

            <Button
                Text="Save Scout File"
                Clicked="OnSaveScoutFileClicked" />

        </VerticalStackLayout>
    </Grid>
</ContentPage>
   