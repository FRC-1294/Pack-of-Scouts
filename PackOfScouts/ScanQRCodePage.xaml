<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PackOfScouts.ScanQRCodePage"
    Title=""
    Background="Black">

    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="Center">
            
            <Label
                Text="Use the QR code scanner to input scout data"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="Medium"
                TextColor="White"
                HorizontalOptions="Center" />

            <Editor
                x:Name="QrData"
                BackgroundColor="White"
                TextColor="Black"
                Margin="20"
                HeightRequest="150" />

            <HorizontalStackLayout
                HorizontalOptions="Center">
                
                <Button
                    Text="Cancel"
                    WidthRequest="150"
                    Clicked="OnCancelClicked"/>

                <Button
                    Text="Done"
                    WidthRequest="150"
                    Clicked="OnDoneClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
